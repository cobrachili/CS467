<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</head>
<body>
<header>
        <h1>Job Tracker</h1>
        <nav>
            <a href="/login">Login</a>
            <a href="/applications">Applications</a>
            <a href="/contacts">Contacts</a>
            <a href="/skills">Skills</a>
            <a href="/stats">Stats</a>
        </nav>
    </header>
<main>
  <section>
            <h2>Contacts</h2>
            </section>

            <article>

              <!-- Button trigger modal -->
              <div class="col-md-6 mx-auto">
            <a href="createOrEdit" class="btn btn-primary">Add Contact </a>
            </div>
            <!-- Modal -->

<form action="/createOrEdit" method ="post">
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="contactModalLabel">Enter Contact Details</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="pb-3">
            <label for="contact-name" class="col-form-label">Contact name:</label>
            <input type="text" class="form-control" id="contact-name" placeholder="Mike Shinoda">
          </div>
          <div class="pb-3">
            <label for="company-name" class="col-form-label">Company:</label>
            <input type="text" class="form-control" id="company-name" placeholder="Microsoft">
          </div>
          <div class="pb-3">
            <label for="message-text" class="col-form-label">Email Address:</label>
            <input type="text" class="form-control" id="email-address" placeholder="name@company.com">
          </div>
          <div class="pb-3">
            <label for="phone-number" class="col-form-label">Phone:</label>
            <input type="text" class="form-control" id="phone-number" placeholder="123-456-7890">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" form="contactModal">Submit</button>
      </div>
      
    </div>
  </div>
</div>
{{!-- <div class="d-flex justify-content-center"> --}}
                <table id="contacts-table">
                    <thead>
                        <tr>                       
                            <th>Name</th>
                            <th>Company</th>
                            <th>Email Address</th>
                            <th>Phone Number</th>
                        </tr>
                    </thead>
                    <tbody >
                    {{#each contacts}}
                    
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.company}}</td>
                        <td>{{this.phoneNumber}}</td>
                        <td>{{this.emailAddress}}</td>
            
                        <td>
                            <form action="/contact/delete/{{this._id}}" method="POST">
                                <a href="createOrEdit/{{this._id}}" class="btn btn-sm btn-link">Edit</a>
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

                </table> 
                

            </article>
          
    </main>
    </body>
    </html>